        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Launch via NPM",
                "runtimeExecutable": "yarn",
                "runtimeArgs": [
                    "start",
                ],
                "port": 9229,
